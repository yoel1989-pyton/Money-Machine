# ============================================================
# MONEY MACHINE - ENVIRONMENT CONFIGURATION
# ============================================================
# Copy this file to .env and fill in your values
# BUDGET: All services below have FREE tiers
# ============================================================

# ============================================================
# N8N CORE CONFIGURATION
# ============================================================
N8N_ENCRYPTION_KEY=your-random-32-char-encryption-key-here
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https

# Queue Mode (for Amplifier Nodes)
EXECUTIONS_MODE=queue
QUEUE_BULL_REDIS_HOST=your-redis-host
QUEUE_BULL_REDIS_PORT=6379

# Webhook URL (set after Railway deployment)
WEBHOOK_URL=https://your-railway-app.railway.app

